<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>
      <div class="container-form  log-reg">
        <div class="row">
          <form action="/admin/edit/<%= user.id %>?_method=PUT" METHOD="POST" class="publish" id="form"  enctype="multipart/form-data">
            <h5>Edición de Usuario: <%= user.user_name %> </h5>

            <div id="first_name" class="col-1">
              <label for="first_name">Nombre/s</label>
              <div>
                <input type="text" class="txt_input" name="first_name" id="first_name" value="<%=user.user_name%>">
              </div>
              <% if (locals.errors && errors.first_name) { %>
                <div class="text-danger">
                  <%= errors.first_name.msg %>
                </div>
                <% } %>
            </div>
            <div id="last_name" class="col-1">
              <label for="last_name">Apellido/s</label>
              <div>
                <input type="text" class="txt_input" name="last_name" id="last_name"  value="<%=user.last_name%>">
              </div>
              <% if (locals.errors && errors.last_name) { %>
                <div class="text-danger">
                  <%= errors.last_name.msg %>
                </div>
                <% } %>
            </div>
            <div id="email" class="col-1">
              <label for="correo">Correo Electrónico</label>
              <div class="container_input">
                <input type="email" class="txt_input" name="email" id="email" value="<%=user.email%>">
              </div>
              <% if (locals.errors && errors.email) { %>
                <div class="text-danger">
                  <%= errors.email.msg %>
                </div>
                <% } %>
            </div>
            <div id="address" class="col-1">
              <label for="address">Dirección</label>
              <div class="container_input">
                <input type="text" class="txt_input" name="address" id="address" <% if (user.address) { %> value="<%=user.last_name%>" <% } %> placeholder="Calle # - CP - Localidad" >
              </div>
              <% if (locals.errors && errors.address) { %>
                <div class="text-danger">
                  <%= errors.address.msg %>
                </div>
                <% } %>
            </div>
            <div id="password" class="col-1">
              <label for="password">Contraseña</label>
              <div class="container_input">
                <input type="password" class="txt_input" name="password" id="password">
              </div>
              <% if (locals.errors && errors.password) { %>
                <div class="text-danger">
                  <%= errors.password.msg %>
                </div>
                <% } %>
            </div>
            <div id="repassword" class="col-1">
              <label for="repassword">Repetir Contraseña</label>
              <input type="password" class="txt_input" name="repassword" id="repassword">
              <i class="icon_validation fas fa-times-circle"></i>
            </div>
            <div>
              <p class="txt_error">Ambas contraseñas deben ser iguales.</p>
            </div>
            <div id="avatar" class="col-1">
              <label for="profile">Avatar </label>
              <input type="file" name="user_avatar">
            </div>
            <div id="terms" class="col-1 terms">
              <label>Acepto los Términos y Condiciones
                <input class="check-form" type="checkbox" name="terms" id="terms"></label>
            </div>
            <input type="submit" class="ok-input" value="Registrate">
          </form>
        </div>
      </div>
      <%- include('./partials/footer') %>
  </body>

</html>