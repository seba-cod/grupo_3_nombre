<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

            <div class="ubication-product-detail box-in-site">
                Repuestos > Motor > Bujias (listado)
            </div>
            <div class="car-image-banner">
                <img src="./images/productDetail/car-photo.jpg" alt="Imagen del auto">
            </div>
            <section class="container">
            <div class="main-product-detail">

                    <div class="left-side-product-detail">
                      

                        <div class="car-brand">
                            <img src="./images/productDetail/audi-logo.png" alt="car-brand-logo">
                        </div>

                        <article class="product-info">
                            <div>
                                    <p class="product-name">
                                        <%= product.name %>
                                    </p> 
                                    <div class="product">
                                        <div class="product-img-slider">
                                          
                                            <img src="./images/productDetail/product-image-1.JPG" alt="">
                                        </div>
                                        <div class="product-info">
                                            <p>Marca: <%= product.brand %> </p>
                                            <p>Modelo: <%= product.piecenumber %> </p>
                                            <p>Original: <%= product.original %> </p>
                                            <p>Descripción: <%= product.description %> </p>
                                            <% if (product.carBrand != null ) { %>
                                                <p>Para vehículos marca: <%= product.carBrand %> </p>
                                                <% } %>
                                            <% if (product.carModel != null) { %>
                                                <p>Modelos: <%= product.carModel %> 
                                                    <%} if (product.carYear !== null) { %>
                                                        <%= product.carYear %>   </p> <% } %>
                                                
                                        </div> 
                                    </div>

                                    <form action="" class="quantity">
                                        <span>Cantidad:</span>
                                        <% if ( product.quantity > 1 ) { %>
                                            <button type="button" class="quantity-selector">
                                                <select name="quantity" id="quantity">
                                                    <% for (let i=0 ; i< product.quantity ; i++) { %>
                                                        <option value="<%=i%>"> <%=i%> </option>
                                                        <% } %>
                                                </select>
                                            </button>
                                            <% } else { %>
                                                <span>No hay Stock disponible</span>
                                                <% } %>
                                    </form>
                            </div>
                            <div class="product-review">
                             
                            </div>
                        </article>

                    </div> 

                    <div class="right-side-product-detail">
                        <div class="buy-options">
                            <div class="costs">
                                <p class="product-value">$ <%= product.price %><span class="on-12-cuotes">($ <%= product.price/12 %> en 12 cuotas sin interés)</span></p>
                            </div>
                            <% if ( product.quantity>0 ) { %>
                                <p class="bold">Stock disponible</p>
                                <% } %>
                                    <button type="submit" class="buy-button">Comprar $</button>
                                    <button type="submit" class="add-to-cart-button">Agregar al carrito</button>
                        </div>

                        <div class="contact">
                            <p class="bold">¿Tenés dudas sobre el producto?</p>
                            <button type="submit" class="contact-seller">Contactate con el vendedor</button>
                        </div>
                    </div>
                </div>
            </section>


            <section class="bottom">
                <div class="bottom-side-product-detail">
                    <article>
                        <img src="./images/productDetail/related/knock-sensor.JPG" alt="Sensor-detonacion">
                        <p>Sensor de detonación</p>
                    </article>
                    <article>
                        <img src="./images/productDetail/related/parking-sensor.JPG" alt="Sensor-estacionamiento">
                        <p>Sensor de estacionamiento</p>
                    </article>
                    <article>
                        <img src="./images/productDetail/related/sonda-lambda.JPG" alt="Sonda-lambda">
                        <p>Sonda lambda</p>
                    </article>
                </div>
            </section>

            <%- include('./partials/footer') %>

    </body>

</html>