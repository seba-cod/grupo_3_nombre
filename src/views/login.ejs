<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>
      <div class="container-form log-reg">
        <div class="row">
          <form action="/login" class="publish" id="logform" method="POST">
            <div id="user_name" class="col-1">
              <label for="user_name">Nombre de Usuario</label>
              <div>
                <input type="text" class="txt_input" name="user_name" id="user_name">
                <% if (locals.errors && errors.user_name) { %>
                  <p class="txt_error">Puede contener letras, numeros, puntos, guiones y guion bajo.</p>
                  <%= errors.user_name.msg %>

                  <% } %>
                <i class="icon_validation fas fa-times-circle"></i>
              </div>
            </div>
            <div id="password" class="col-1">
              <label for="password">Contraseña</label>
              <div>
                <input type="password" class="txt_input" name="password" id="password">
                <% if (locals.errors && errors.password) { %>
                  <p class="txt_error">Tiene que ser de 6 a 12 dígitos.</p>
                  <%= errors.password.msg  %> 
                <% } %>
                <i class="icon_validation fas fa-times-circle"></i>
              </div>
            </div>
              <input type="submit" value="Ingresá" class="ok-input">
            </form>
        </div>
      </div>
      <%- include('./partials/footer') %>
  </body>
</html>