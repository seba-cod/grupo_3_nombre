<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>
      <div class="container-form log-reg">
        <div class="row">
          <form action="/user/login" class="publish" id="logform" method="POST">
            <div id="email" class="col-1">
              <label for="email">Correo electrónico</label>
              <div>
                <input type="text" class="txt_input" name="email" id="email" <% if (locals.old && old.email) { %> value="<%= old.email %>"

                  <% } %> >
                    <% if (locals.errors && errors.email) { %>
                      <div class="text-danger">
                        <%= errors.email.msg %>
                      </div>
                      <% } %>
              </div>
            </div>
            <div id="password" class="col-1">
              <label for="password">Contraseña</label>
              <div>
                <input type="password" class="txt_input" name="password" id="password">
                <% if (locals.errors && errors.password) { %>
                  <div class="text-danger">
                    <%= errors.password.msg %>
                  </div>
                  <% } %>
              </div>
            </div>
            <input type="submit" value="Ingresá" class="ok-input">
          </form>
        </div>
      </div>
      <%- include('./partials/footer') %>
  </body>

</html>