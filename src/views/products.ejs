<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

    <!-- Seccion productos-->
    <main>
      <div class="container">
        <div class="row-all">
          <% products.forEach(product=> { %>
          <div class="col-4">
            <a class="productLink" href="/product/detail/<%=product.id%>">
              <div class="image">
                <img src="/images/products/<%=product.image%>" alt="" />
              </div>
              <div class="main-txt-product">
                <div class="text-img">
                  <h4><%= product.name %></h4>
                  <p>$<%= product.price %></p>
                </div>
              </a>
                <div class="text-button">
                  <form method="GET" action="/cart/add/<%=product.id%>">
                    <button class="addToCartButton">Agregar<i class="fas fa-cart-plus"></i></button>
                  </form>
                </div>
              </div>
          </div>
          <% } ) %>
        </div>
      </div>
    </main>

    <%- include('./partials/footer') %>
  </body>
</html>
