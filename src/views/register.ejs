<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
<body>
  <%- include('./partials/header') %>
  <br>
  <div class="container">
        <h2>Formulario de Registro</h2>
        <form action="/register" METHOD="POST" class="form" id="form" enctype="multipart/form-data">
          
          <div id="div_nombre_user" class="div_nombre_user">
            <label for="nombre_user" >Nombre de Usuario</label>
            <div class="container_input">
              <input type="text" class="txt_input" name="user_name" id="user_name" placeholder="Nombre de Usuario">
            </div>
            <% if (locals.errors && errors.user_name) { %> 
              <div class= "text-danger">
                <%= errors.user_name.msg %> 
              </div>
            <% } %> 
          </div>

          <div id="div_nombre">
            <label for="nombre" >Nombre</label>
            <div class="container_input">
              <input type="text" class="txt_input" name="first_name" id="first_name" placeholder="Nombre/s">
            </div>
            <% if (locals.errors && errors.first_name) { %> 
              <div class= "text-danger">
                <%= errors.first_name.msg %> 
              </div>
            <% } %> 
          </div>
    
          <div id="div_apellido">
            <label for="apellido">Apellidos</label>
            <div class="container_input">
              <input type="text" class="txt_input" name="last_name" id="last_name" placeholder="Apellido">
            </div>
            <% if (locals.errors && errors.last_name) { %> 
              <div class= "text-danger">
                <%= errors.last_name.msg %> 
              </div>
            <% } %> 
          </div>
          
          <div id="div_correo" class="div_correo">
            <label for="correo" >Correo Electrónico</label>
            <div class="container_input">
              <input type="email" class="txt_input" name="email" id="email" placeholder="ejemplo@email.com">
            </div>
            <% if (locals.errors && errors.email) { %> 
              <div class= "text-danger">
                <%= errors.email.msg %> 
              </div>
            <% } %> 
          </div>

         <div id="div_correo" class="div_correo">
            <label for="address" >Dirección</label>
            <div class="container_input">
              <input type="text" class="txt_input" name="address" id="address" placeholder="Calle # - CP - Localidad">
            </div>
            <% if (locals.errors && errors.address) { %> 
              <div class= "text-danger">
                <%= errors.address.msg %> 
              </div>
            <% } %> 
          </div>

             <div id="div_password" class="div_password">
            <label for="password" >Contraseña</label>
            <div class="container_input">
              <input type="password" class="txt_input" name="password" id="password" placeholder="Ingresá tu contraseña"> 
            </div>
            <% if (locals.errors && errors.password) { %> 
              <div class= "text-danger">
                <%= errors.password.msg %> 
              </div>
            <% } %> 
          </div>

          <div id="div_password2" class="div_password2">
            <label for="repassword" >Repetir Contraseña</label>
            <div class="container_input">
              <input type="password" class="txt_input" name="repassword" id="repassword" placeholder="Reingresá tu contraseña">
              <i class="icon_validation fas fa-times-circle"></i>
            </div>
            <p class="txt_error">Ambas contraseñas deben ser iguales.</p>
          </div>

          <div class="div_correo">
            <label for="profile">Avatar </label>
            <input type="file" name="user_avatar">
          </div>
    
          <div id="div_terminos" class="div_terminos">
            <label >
              <input class="formulario__checkbox" type="checkbox" name="terms" id="terms">
              Acepto los Términos y Condiciones
            </label>
          </div>
    
          <div class="div_enviar">
            <button type="submit" class="btn_enviar">Registrate!</button>
          </div>
        </form>
      </div>

      <br>
      <br>
      

      <%- include('./partials/footer') %>
</body>
</html>